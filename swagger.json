    "/apis/register": {
      "post": {
        "tags": [
          "user"
        ],
        "requestBody": {
          "description": "註冊使用者",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "user1"
                  },
                  "email": {
                    "type": "string",
                    "example": "user1@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "123456"
                  },
                  "tel": {
                    "type": "string",
                    "example": "0912345678"
                  },
                  "address": {
                    "type": "string",
                    "example": "台北市"
                  }
