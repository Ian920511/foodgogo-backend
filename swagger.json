              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "新增購物車商品成功"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "cartItem": {
                          "$ref": "#/components/schemas/CartItem"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "商品目前未提供"
          },
          "401": {
            "description": "請先登入才能使用功能"
          },
          "403": {
            "description": "沒有使用該頁面的權限"
          }
        }
      },
      "patch": {
        "tags": [
          "carts"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "商品的id",
